# 基础配置
PROJECT_NAME=数潮
VERSION=1.0.0

# 安全配置
SECRET_KEY=123456
JWT_SECRET_KEY=your-jwt-secret-key

# 数据库配置
DB_USER=root
DB_PASSWORD=123456
DATABASE_URL=mysql+pymysql://root:123456@localhost/shuchao
SQLALCHEMY_POOL_SIZE=5
SQLALCHEMY_MAX_OVERFLOW=10

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://:@localhost:6379/0

# AI配置
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# 缓存配置
CACHE_TYPE=redis
CACHE_REDIS_HOST=localhost
CACHE_REDIS_PORT=6379
CACHE_REDIS_DB=1
CACHE_REDIS_URL=redis://:@localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300

# 邮件配置
MAIL_SERVER=smtp.qq.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-qq-email@qq.com
MAIL_PASSWORD=your-qq-email-authorization-code
MAIL_DEFAULT_SENDER=数潮AI导购 <your-qq-email@qq.com>

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# 爬虫配置
CRAWLER_INTERVAL=3600
CRAWLER_MAX_PAGES=100
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# 监控配置
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# AWS配置
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key